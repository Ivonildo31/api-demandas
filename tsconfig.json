{
    "typescript.tsdk": "node_modules/typescript/lib",
    "declaration": true,
    "compilerOptions": {
        "outDir": "build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators":true,
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitThis" : true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters" : false
    },
    "include": [
        "server/**/*"
    ],
    "exclude": [
        "build",
        "node_modules",
        "server/**/*.spec.ts",
        "jspm_packages",
        "rethinkdb_data"
    ]
}